<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        app:srcCompat="@drawable/shadow_card"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="0dp" />


    <TextView
        android:id="@+id/watertraker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Tracker"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="78dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday , 13. 2022"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="166dp" />


    <!--    -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <View
            android:layout_width="355dp"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:background="#1c00be" />


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bell"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="340dp"
        tools:layout_editor_absoluteY="80dp"
        android:background="@drawable/belll"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/del"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="340dp"
        tools:layout_editor_absoluteY="220dp"
        android:background="@drawable/del"/>

    <ImageView
        android:id="@+id/bottombar"
        android:layout_width="415dp"
        android:layout_height="110dp"
        android:paddingHorizontal="10dp"
        app:srcCompat="@drawable/bottomcont"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="595dp"
        android:foregroundGravity="center"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/glass"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="602dp"
        android:background="@drawable/glass"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="165"
        tools:layout_editor_absoluteY="610dp"
        android:background="@drawable/newplus"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/select"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="300"
        tools:layout_editor_absoluteY="610dp"
        android:background="@drawable/selectcup"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/arow"/>


